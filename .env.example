# Environment Configuration Example
# Copy this file to .env and update the values

# Application
ENVIRONMENT=development
APP_NAME=SE SME Agent
VERSION=1.0.0
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Agent Server
AGENT_HOST=localhost
AGENT_PORT=8001

# RAG Pipeline
RAG_HOST=localhost
RAG_PORT=8002

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/se_sme_agent
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=se_sme_documents

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=pretty

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Embedding Models (Updated for better performance)
# General purpose - excellent for semantic understanding
GENERAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative high-quality options:
# GENERAL_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
# GENERAL_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# Domain-specific - optimized for code and technical content
DOMAIN_EMBEDDING_MODEL=microsoft/graphcodebert-base
# Alternative code-focused options:
# DOMAIN_EMBEDDING_MODEL=microsoft/codebert-base
# DOMAIN_EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-cos-v1

# Reranking Model (for improved relevance)
RERANKING_MODEL=BAAI/bge-reranker-large
# Alternative: cross-encoder/ms-marco-MiniLM-L-6-v2

# LLM Configuration (Updated for better performance)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
# Fallback models:
# LLM_MODEL=gpt-3.5-turbo-1106
# LLM_MODEL=claude-3-sonnet-20240229
LLM_API_KEY=your-openai-api-key-here
LLM_BASE_URL=
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Provider-specific API Keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-ai-api-key

# Local/Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Tool Configuration
ENABLE_CODE_EXECUTION=false
ENABLE_EMAIL_TOOLS=false

# Tool Execution Settings
TOOL_TIMEOUT_SECONDS=300
TOOL_MAX_RETRIES=3
TOOL_CONCURRENT_LIMIT=5

# Code Execution Tool Configuration
CODE_EXECUTION_SANDBOX_ENABLED=true
CODE_EXECUTION_TIMEOUT=60
CODE_EXECUTION_MAX_MEMORY_MB=512
CODE_EXECUTION_ALLOWED_LANGUAGES=python,javascript,java

# Email Tool Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=SE SME Agent

# Knowledge Retrieval Tool Configuration
RAG_MAX_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_RERANK_ENABLED=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090