# Environment Configuration Example
# Copy this file to .env and update the values

# Application
ENVIRONMENT=development
APP_NAME=SE SME Agent
VERSION=1.0.0
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Agent Server
AGENT_HOST=localhost
AGENT_PORT=8001

# RAG Pipeline
RAG_HOST=localhost
RAG_PORT=8002

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/se_sme_agent
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=se_sme_documents

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Embedding Models
GENERAL_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
DOMAIN_EMBEDDING_MODEL=microsoft/graphcodebert-base

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your-openai-api-key-here
LLM_BASE_URL=

# Tool Configuration
ENABLE_CODE_EXECUTION=false
ENABLE_EMAIL_TOOLS=false

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090