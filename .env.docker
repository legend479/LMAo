# Environment Configuration Example
# Copy this file to .env and update the values

# Application
ENVIRONMENT=development
APP_NAME=SE SME Agent
VERSION=1.0.0
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://web-ui:3000", "http://172.28.0.1:*", "*:*"]

# Agent Server
AGENT_HOST=agent-server
AGENT_PORT=8001

# RAG Pipeline
RAG_HOST=rag-pipeline
RAG_PORT=8002

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/se_sme_agent
REDIS_URL=redis://redis:6379/0

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=se_sme_documents

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Embedding Models
GENERAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DOMAIN_EMBEDDING_MODEL=microsoft/graphcodebert-base
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2


